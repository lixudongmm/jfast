<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
	
    <context id="MysqlTables" targetRuntime="MyBatis3">
        <!-- 增加Models ToStirng方法 -->
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin" />
        <!-- 增加爱Models Serializable实现 -->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />
        <commentGenerator>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true" />
        </commentGenerator>
        <!-- mysql相关配置 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/sdemo?useUnicode=true&amp;characterEncoding=UTF-8&amp;serverTimezone=UTC"
                        userId="root" password="guogan">
                        <property name="nullCatalogMeansCurrent" value="true" />
        </jdbcConnection>

        <!-- 是否忽略BigDecimals 非必填项 -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <javaModelGenerator targetPackage="net.cnki.app.pojo" targetProject="springbootdemo/src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="mapper" targetProject="springbootdemo/src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="net.cnki.app.mapper" targetProject="springbootdemo/src/main/java">
        </javaClientGenerator>

        <!-- 指定表格 -->
        <table tableName="sys_role_menu" domainObjectName="SysRoleMenu"
               enableCountByExample="true" enableDeleteByExample="false" enableDeleteByPrimaryKey="true"
               enableInsert="true" enableSelectByExample="true" enableSelectByPrimaryKey="true"
               enableUpdateByExample="false" enableUpdateByPrimaryKey="true">
        </table>
    </context>
</generatorConfiguration>
